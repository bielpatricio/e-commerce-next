{
  "extends": [
    "@rocketseat/eslint-config/next",
    "next/core-web-vitals"
  ],
  "rules": {
    "no-useless-constructor": "off",
    "camelcase": "off",
    "new-cap": "off",
    "no-useless-catch": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-namespace": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": false
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  }
}